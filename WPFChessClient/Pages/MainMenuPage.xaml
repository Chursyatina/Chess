<Page x:Class="WPFChessClient.Pages.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFChessClient.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenuPage">

    <Grid>
        <StackPanel Width="300" Height="300">
            <Button x:Name="StartOnePlayerGame" Click="StartGamePlay_Click"  Padding="10" Content="Start One Player Game" Margin="30"/>
            <Button x:Name="StartMultiplayerGame" Click="StartMultiplayerGame_Click" Padding="10" Content="Start Multiplayer Game" Margin="30" />
            <Button x:Name="Exit" Click="Exit_Click"  Padding="10" Content="Exit" Margin="30"/>
        </StackPanel>
    </Grid>
</Page>
